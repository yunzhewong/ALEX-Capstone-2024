<?xml version="1.0"?>
<robot name="ALEX_Model" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="common.xacro" />

  <link name="world"></link>

  <link name="back_plate">
    <xacro:box_visual_and_collision size="0.5 0.01 0.2" xyz="0 0 0"/> 
    <xacro:generic_inertia />
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="back_plate"/>      
    <origin xyz="0 0 1" rpy="0 0 0"/>
  </joint>

  <link name="right_hip">
    <xacro:cylinder_visual_and_collision length="0.2" radius="0.02" xyz="0.1 0 0" rpy="0 ${pi/2} 0" />
    <xacro:generic_inertia />
  </link>

  <joint name="base_to_right_hip" type="fixed">
    <parent link="back_plate"/>
    <child link="right_hip"/>
    <origin xyz="0.25 0 0"/>
  </joint>

  <link name="right_thigh">
    <xacro:cylinder_visual_and_collision length="0.4" radius="0.1" xyz="0 0 -0.2" rpy="0 0 0" />
    <xacro:generic_inertia />
  </link>

  <joint name="right_hip_to_thigh" type="revolute">
    <parent link="right_hip" />
    <child link="right_thigh" />
    <origin xyz="0.1 0 0" />
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit lower="${-pi / 2}" upper="${pi / 2}" effort="100" velocity="1" />
  </joint>

  <link name="right_knee">
    <xacro:cylinder_visual_and_collision length="0.15" radius="0.02" xyz="0 0 0" rpy="0 ${pi / 2} 0" />
    <xacro:generic_inertia />
  </link>

  <joint name="right_thigh_to_knee" type="fixed">
    <parent link="right_thigh" />
    <child link="right_knee" />
    <origin xyz="0 0 -0.4" />
  </joint>

  <link name="right_calf">
    <xacro:cylinder_visual_and_collision length="0.3" radius="0.075" xyz="0 0 -0.15" rpy="0 0 0" />
    <xacro:generic_inertia />
  </link>

  <joint name="right_knee_to_calf" type="revolute">
    <parent link="right_knee" />
    <child link="right_calf" />
    <origin xyz="0 0 0" />
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit lower="${-pi / 2}" upper="${pi / 2}" effort="100" velocity="1" />
  </joint>

  <link name="right_ankle">
    <xacro:cylinder_visual_and_collision length="0.1" radius="0.02" xyz="0 0 0" rpy="0 ${pi / 2} 0" />
    <xacro:generic_inertia />
  </link>

  <joint name="right_calf_to_ankle" type="fixed">
    <parent link="right_calf" />
    <child link="right_ankle" />
    <origin xyz="0 0 -0.3" />
  </joint>
  
  <link name="right_foot">
    <xacro:box_visual_and_collision size="0.1 0.2 0.01" xyz="0 -0.05 0"/> 
    <xacro:generic_inertia />
  </link>

  <joint name="right_ankle_to_foot" type="fixed">
    <parent link="right_ankle" />
    <child link="right_foot" />
    <origin xyz="0 0 -0.02" />
  </joint>
  
</robot>