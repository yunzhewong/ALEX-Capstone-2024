<?xml version="1.0"?>
<robot name="ALEX_Model_v2" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="motor.xacro" ns="motor" />
  <xacro:include filename="common.xacro" ns="common" />
  <xacro:include filename="materials.xacro" />

  <!-- x = left, y = robot back, z = up -->
  <link name="world"></link>

  <link name="base">
    <xacro:common.box width="0.2" depth="0.2" height="0.05" density="10000" />
  </link>

  <joint name="fix" type="fixed">
    <parent link="world" />
    <child link="base" />
    <origin xyz="0 0 0.025" rpy="0 0 0" />
  </joint>

  <link name="bottom_motor_base">
    <xacro:common.box width="0.1" depth="0.1" height="0.1" density="10000" />
  </link>

  <joint name="bottom_motor_base_to_base" type="fixed">
    <parent link="base" />
    <child link="bottom_motor_base" />
    <origin xyz="0 0 0.075" rpy="0 0 0" />
  </joint>

  <link name="bottom_motor_shaft">
    <xacro:common.cylinder length="0.025" radius="0.01" density="10000" />
  </link>

  <joint name="bottom_motor" type="revolute">
    <parent link="bottom_motor_base" />
    <child link="bottom_motor_shaft" />
    <origin xyz="0 0 ${0.05 + 0.025/2}" />
    <limit lower="${-100 * pi}" upper="${100 * pi}" effort="100000" velocity="1000000" />
    <axis xyz="0 0 -1" />
    <dynamics damping="1" friction="0.1" />
  </joint>
  
  <link name="top_motor_base">
    <xacro:common.box width="0.1" depth="0.1" height="0.1" density="10000" />
  </link>

  <joint name="top_motor_base_bottom_motor_shaft" type="fixed">
    <parent link="bottom_motor_shaft" />
    <child link="top_motor_base" />
    <origin xyz="0 0 ${0.05 + 0.025/2}" rpy="0 0 0" />
  </joint>

  <link name="top_motor_shaft">
    <visual>
      <material name="blue" />
      <xacro:common.cylinder-geom length="0.1" radius="0.01" xyz="${0.025/2} 0 ${0.1/2}"/>
    </visual>
    <xacro:common.cylinder length="0.025" radius="0.01" density="10000" rpy="0 ${pi / 2} 0"/>
  </link>

  <joint name="top_motor" type="revolute">
    <parent link="top_motor_base" />
    <child link="top_motor_shaft" />
    <origin xyz="${0.05 + 0.025/2} 0 0" />
    <limit lower="${-100 * pi}" upper="${100 * pi}" effort="100000" velocity="1000000" />
    <axis xyz="-1 0 0" />
    <dynamics damping="1" friction="0.1" />
  </joint>

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="bottom_motor">
      <command_interface name="effort">
        <param name="min">-1000</param>
        <param name="max">1000</param>
      </command_interface>
      <state_interface name="position" />
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="top_motor">
      <command_interface name="effort">
        <param name="min">-1000</param>
        <param name="max">1000</param>
      </command_interface>
      <state_interface name="position" />
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>../config/twin_controller.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
